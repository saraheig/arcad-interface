<%= form_with(model: actors_group, local: true) do |form| %>
  <% if actors_group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(actors_group.errors.count, "erreur identifiée", "erreurs identifiées") %> : </h2>

      <ul>
      <% actors_group.errors.messages.values.each do |message| %>
        <li><%= message[0] %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <hr/><h3>Informations sur la catégorie d'acteurs</h3><br/>

  <div class="field">
    Nom de la catégorie d'acteurs* : <br/>
    <em>Champ de type texte (maximum 50 caractères, espaces compris) et champ à valeur unique</em><br/>
    <%= form.text_field :name, size: '43.5' %>
  </div><br/>

  <div class="field">
    Mission de la catégorie d'acteurs : <br/>
    <em>Champ de type texte (maximum 500 caractères, espaces compris)</em><br/>
    <%= form.text_area :mission, size: '40x5' %>
  </div><br/>

  <div class="field">
    Public ? 
    <%= form.check_box :category %>
  </div><br/>

  <div class="field">
    France ? 
    <%= form.check_box :france %>
  </div><br/>

  <div class="field">
    Suisse ? 
    <%= form.check_box :swiss %>
  </div><br/>

  <div class="field">
    Niveau NUTS : <br/>
    <em>Champ de type entier (valeurs possibles : 1, 2, 3, 4 ou 5)</em><br/>
    <%= form.number_field :nuts %>
  </div><br/>

  <div class="field">
    Administration ? 
    <%= form.check_box :administration %>
  </div><br/>

  <div class="field">
    Exécutif ? 
    <%= form.check_box :executive %>
  </div><br/>

  <div class="field">
    Législatif ? 
    <%= form.check_box :legislative %>
  </div><br/>

  <hr/>
  <h6>* Champ obligatoire</h6>
  <div class="actions">
    <%= form.submit "Enregistrer" %>
  </div>
<% end %>
